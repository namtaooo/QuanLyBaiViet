@model QuanLyBaiViet.Models.Article

@{
    ViewData["Title"] = "Details";
}

<h1>Chi tiết bài viết</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubmitedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubmitedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic.TopicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @{
                var statusText = Model.Status switch
                {
                    ArticleStatus.Pending => "Chờ duyệt",
                    ArticleStatus.Approved => "Đã duyệt",
                    ArticleStatus.Rejected => "Từ chối",
                    _ => Model.Status.ToString()
                };
            }
            <span class="badge @(Model.Status == ArticleStatus.Pending ? "bg-warning text-dark" :
                                   Model.Status == ArticleStatus.Approved ? "bg-success text-white" :
                                   Model.Status == ArticleStatus.Rejected ? "bg-danger text-white" : "bg-secondary text-white")">
                @statusText
            </span>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ArticleId">Sửa</a> 
    <a asp-action="Delete" asp-route-id="@Model?.ArticleId">Xóa</a>
    <a asp-action="Index">Quay lại</a>
</div>
